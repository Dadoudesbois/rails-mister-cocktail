
  <%= simple_form_for [@cocktail] do |f| %>

    <div class="form-group">
      <%= f.input :name, label: false, placeholder: "Your cocktail name", class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.input :photo, label: false, value: "image"%>
        <%= f.input :photo_cache, as: :hidden%>
    </div>

    <%= f.submit "SAVE", class: 'btd'%>

  <% end %>

